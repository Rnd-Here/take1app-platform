<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="appName" source="spring.application.name"
                    defaultValue="take-one-app-backend"/>

    <!-- Splunk Configuration Placeholders -->
    <springProperty scope="context" name="splunkUrl" source="splunk.url"
                    defaultValue="http://localhost:8088/services/collector/event"/>
    <springProperty scope="context" name="splunkToken" source="splunk.token"
                    defaultValue="00000000-0000-0000-0000-000000000000"/>
    <springProperty scope="context" name="splunkIndex" source="splunk.index" defaultValue="main"/>

    <!-- Traceability Pattern: ApplicationName:Endpoint:UUID:Java Class:Method:logging message -->
    <property name="TRACE_PATTERN" value="${appName}:%X{endpoint}:%X{traceId}:%C:%M:%msg%n"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.takeone.backend.util.MaskingPatternLayout">
                <pattern>${TRACE_PATTERN}</pattern>
            </layout>
        </encoder>
    </appender>

    <!-- Splunk HEC Appender -->
    <appender name="SPLUNK" class="com.splunk.logging.HttpEventCollectorLogbackAppender">
        <url>${splunkUrl}</url>
        <token>${splunkToken}</token>
        <index>${splunkIndex}</index>
        <disableCertificateValidation>true</disableCertificateValidation>
        <layout class="com.takeone.backend.util.MaskingPatternLayout">
            <pattern>${TRACE_PATTERN}</pattern>
        </layout>
    </appender>

    <!-- Async Appender for Splunk -->
    <appender name="ASYNC_SPLUNK" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SPLUNK"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_SPLUNK"/>
    </root>

    <logger name="com.takeone.backend" level="DEBUG"/>
</configuration>
